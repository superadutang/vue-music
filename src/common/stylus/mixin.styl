bg-image($url)
  background-image: url($url + '@2x.png')
  @media (min-resolution: 3dppx)
    background-image: url($url + '@3x.png')

no-wrapper()
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    right: -10px
    bottom: -10px
    left: -10px